<% provide(:title, "Words") %>
<div>
  <%= form_tag nil, method: 'get', class: 'tag_form' do %>
    <%= select_tag "category_id", options_from_collection_for_select(Category.all, :id, :title), prompt: "Select category" %>
    <%= submit_tag "Filter category" %>
  <% end %>
</div>
<div>
  <ul class="word" style="list-style-type:none" >
    <li>
      <b>
        <span class="col-md-3">Word</span>
        <span class="col-md-3">Answer</span>
        <span class="col-md-3">Word</span>
        <span class="col-md-3">Answer</span>
      </b>
    </li>
    <%= render @words %>
  </ul>
  <%= will_paginate @words %>
</div>