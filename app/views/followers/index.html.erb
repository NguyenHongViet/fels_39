<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user, size: 50 %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      
    </section>
    <section class="stats">
    
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @followers.any? %>
      <ul class="users follow">
        <%= render @followers %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>