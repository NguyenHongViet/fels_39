<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>  
    </section>
  </aside>
  <div class="col-md-8">
    <% if @activities.any? %>
      <hr><h3>Activities</h3>
      <ol class="entries">
        <%= will_paginate @activities %>
        <%= render @activities %>
        <%= will_paginate @activities %>
      </ol>
    <% else %>
      <hr><h3>Empty activity</h3>
    <% end %>
  </div>
</div>